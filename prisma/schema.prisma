generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id       Int     @id @default(autoincrement())
  name     String
  email    String  @unique
  password String
  orders   Order[]
}

model Order {
  id            Int         @id @default(autoincrement())
  orderNumber   String      @unique
  userId        Int
  firstName     String
  lastName      String
  email         String
  phone         String
  address       String
  city          String
  state         String
  zipCode       String
  country       String      @default("United States")
  subtotal      Float
  shipping      Float
  tax           Float
  total         Float
  status        String      @default("pending")
  paymentStatus String      @default("pending")
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  user          User        @relation(fields: [userId], references: [id])
  orderItems    OrderItem[]
}

model OrderItem {
  id          Int      @id @default(autoincrement())
  orderId     Int
  productId   Int
  productName String
  productImg  String
  price       Float
  quantity    Int
  createdAt   DateTime @default(now())
  order       Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)
}

